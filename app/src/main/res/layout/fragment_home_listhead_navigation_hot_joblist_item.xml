<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/home_listhead_hot_joblist_itemheight"
        android:layout_weight="1">

        <TextView
            android:id="@+id/home_listhead_hot_joblist_jobname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:text="@string/home_hot_parttimejob_jobname"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/home_listhead_hot_joblist_jobname_textsize" />

        <TextView
            android:id="@+id/home_listhead_hot_joblist_money"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/home_hot_parttimejob_money"
            android:textColor="@color/orange_red_light"
            android:textSize="@dimen/home_listhead_hot_joblist_money_textsize" />

    </RelativeLayout>
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/forward_40gray"
            android:layout_width="@dimen/home_listhead_hot_joblist_imageheight"
            android:layout_height="@dimen/home_listhead_hot_joblist_imageheight" />

    </FrameLayout>
</LinearLayout>