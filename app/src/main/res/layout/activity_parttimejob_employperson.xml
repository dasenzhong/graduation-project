<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarheight"
        android:background="@color/black_blue">

        <ImageView
            android:id="@+id/employperson_back"
            android:layout_width="@dimen/actionbar_imageheight"
            android:layout_height="@dimen/actionbar_imageheight"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/employperson_actionbar_titile"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbar_titletextsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/employperson_steplayoutheight"
        android:background="@color/gray_10">

        <FrameLayout
            android:id="@+id/employperson_infolayout"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/employperson_step_layout_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/amployperson_step_info"
                android:textColor="@color/gray_75"
                android:textSize="@dimen/employperson_steplayouttextsize" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/employperson_agentlayout"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/employperson_step_layout_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/employperson_step_chooseagent"
                android:textColor="@color/gray_75"
                android:textSize="@dimen/employperson_steplayouttextsize" />
        </FrameLayout>

        <Button
            android:id="@+id/employperson_button_step"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/employperson_step_button_cannotsend"
            android:padding="0dp"
            android:text="@string/employperson_step_next"
            android:textSize="@dimen/employperson_steplayoutbuttontexisize" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/employperson_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>