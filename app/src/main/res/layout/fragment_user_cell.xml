<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/user_cell_image"
            android:layout_width="@dimen/actionbar_imageheight_big"
            android:layout_height="@dimen/actionbar_imageheight_big"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/user_cell_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/user_cell_image"
            android:text="@string/pleaseInput"
            android:textColor="@color/black"
            android:textSize="@dimen/inputtextsize" />

        <ImageView
            android:layout_width="@dimen/actionbar_imageheight_small"
            android:layout_height="@dimen/actionbar_imageheight_small"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward_40gray" />

    </RelativeLayout>

</FrameLayout>