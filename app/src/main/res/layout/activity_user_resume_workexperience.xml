<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_10"
    android:orientation="vertical">

    <!--actionbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarheight"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/userresume_workexperienceactivity_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/actionbar_imageheight_small"
                android:layout_height="@dimen/actionbar_imageheight_small"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/user_resume_actionbar_title"
                android:textColor="@color/white"
                android:textSize="@dimen/actionbar_textviewtextsize" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_resume_workexperienceactivity_actionbar_title"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbar_titletextsize" />

        <Button
            android:id="@+id/userresume_workexperienceactivity_edit"
            android:layout_width="@dimen/userresume_infoactivity_okwidth"
            android:layout_height="@dimen/userresume_infoactivity_okheight"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="0dp"
            android:text="@string/user_resume_workexperienceactivity_actionbar_edit"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/userresume_workexperienceactivity_addlayout"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/userresume_workexperienceactivity_addlayout"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/userresume_woekexperience_add"
                android:layout_width="@dimen/userresume_workexperienceactivity_addimagesize"
                android:layout_height="@dimen/userresume_workexperienceactivity_addimagesize" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_resume_workexperienceactivity_addlayout_text"
                android:textColor="@color/black_blue"
                android:textSize="@dimen/userresume_workexperienceactivity_addtextsize" />

        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/userresume_workexperienceactivity_list"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>