<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_10"
    android:orientation="vertical">

    <!--actionbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarheight"
        android:background="@color/black_blue"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">


        <ImageView
            android:id="@+id/login_back"
            android:layout_width="@dimen/actionbar_imageheight"
            android:layout_height="@dimen/actionbar_imageheight"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_actionbar_title"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbar_titletextsize" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="@string/login_actionbar_register"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbar_textviewtextsize" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_layoutheight"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/login_account"
            android:textColor="@color/gray_80"
            android:textSize="@dimen/login_textsize" />

        <EditText
            android:id="@+id/login_account"
            android:textColor="@color/black"
            android:inputType="text"
            android:digits="@string/digits"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:maxEms="20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/transparent"
            android:hint="@string/login_accounthint"
            android:textSize="@dimen/login_textsize" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_layoutheight">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/login_password"
            android:textColor="@color/gray_80"
            android:textSize="@dimen/login_textsize" />

        <EditText
            android:id="@+id/login_password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:digits="@string/digits"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:maxEms="20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/transparent"
            android:hint="@string/login_passwordhint"
            android:textSize="@dimen/login_textsize" />

    </LinearLayout>

    <FrameLayout
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_layoutheight">

        <Button
            android:id="@+id/login_signin"
            android:background="@color/black_blue"
            android:text="@string/login_signin"
            android:textSize="@dimen/login_textsize"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>


</LinearLayout>